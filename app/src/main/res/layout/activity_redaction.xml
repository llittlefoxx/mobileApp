<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rev.dali.mohamedalitlili.Redaction">

    <TextView
        android:id="@+id/mytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:textSize="60dp" />

    <EditText
        android:id="@+id/titrearticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mytitle"
        android:hint="titre de l'article"
        android:paddingTop="30dp" />

    <TextView
        android:id="@+id/tvstatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titrearticle"
        android:paddingTop="30dp"
        android:text="Description de l'article" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvstatic"
        android:paddingTop="50dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visible"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/desc"
        android:layout_marginTop="54dp" />
</RelativeLayout>
